@model IEnumerable<MobileShope.Models.Vendor>

@{
    ViewData["Title"] = "VendorList";
}

<h2>VendorList</h2>

<p>
    <a asp-action="AddVendor" class="btn btn-primary">Create New</a>
</p>
<table class="table" id="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VendorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VandorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCardNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VendorId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VandorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCardNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.ActionLink("Edit", "VendorEdit", new { VendorID = item.VendorId } , new { @class="btn btn-success" }) |
                    @Html.ActionLink("Details", "VendorDetail", new { VendorID = item.VendorId }, new { @class="btn btn-sm btn-primary" }) |
                    @Html.ActionLink("Delete", "VendorDelete", new { VendorID = item.VendorId }, new { @class="btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {

    <script type="text/javascript">
                function add_chatinline() { var hccid = 69060714; var nt = document.createElement("script"); nt.async = true; nt.src = "https://mylivechat.com/chatinline.aspx?hccid=" + hccid; var ct = document.getElementsByTagName("script")[0]; ct.parentNode.insertBefore(nt, ct); }
                add_chatinline();</script>
    <script>
                $(document).ready(function () {
                    $('#table').DataTable();

                });
    </script>
}

